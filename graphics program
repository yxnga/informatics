10 ARRAY c
20 c[1] = "darkmagenta"
30 c[2] = "darkorchid"
40 c[3] = "darkslateblue"
50 c[4] = "darkviolet"
60 c[5] = "indigo"
70 c[6] = "mediumpurple"
  REM start draw loop
80 a = rand(50) - 1
90 b = rand(50) - 1
  REM a and b are the x and y coordinates for where it is printing the colour of c[rand(6)]:
100 PLOT a, b, c[rand(6)]
110 GOTO 80
